    <style>
        .announcement-banner {
            white-space: nowrap;
            overflow: hidden;
            width: 900px; /* Banner genişliği */
            position: relative;
            margin-left: 10px;
            display: flex;
            align-items: center;
        }

        #announcement-text {
            position: relative;
            white-space: nowrap;
            display: inline-block;
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const announcementText = document.getElementById('announcement-text');
            const banner = announcementText.parentElement;

            function scrollText() {
                const bannerWidth = banner.clientWidth;
                const textWidth = announcementText.scrollWidth;
                let startPos = bannerWidth;
                let endPos = -textWidth;
                let speed = 1; // Hız ayarı

                announcementText.style.left = startPos + 'px'; // Başlangıç konumu

                function step() {
                    if (parseFloat(announcementText.style.left) <= endPos) {
                        announcementText.style.left = startPos + 'px';
                    } else {
                        announcementText.style.left = parseFloat(announcementText.style.left) - speed + 'px';
                    }
                    requestAnimationFrame(step);
                }

                step();
            }

            scrollText();
        });
    </script>
