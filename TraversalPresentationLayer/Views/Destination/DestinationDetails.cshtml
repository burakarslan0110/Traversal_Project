@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "DestinationDetails";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<body>

    <!--header
    <!-- //header -->
    <!-- about breadcrumb -->
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Tur Detayları</h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href=/Default/Index>Ana Sayfa</a></li>
                    <li><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rotalar </li>
                    <li><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> @Model.City </li>
                </ul>
            </div>
        </div>
    </section>
    <!-- //about breadcrumb -->
    <!--/blog-->
    <div class="py-5 w3l-homeblock1 text-center">
        <div class="container mt-md-3">
            <h3 class="blog-desc-big text-center mb-4">
                @Model.City Tur Rotamız Hakkında Bilmeniz Gereken Her Şey!
            </h3>
        </div>
        <div class="blog-post-align">
            <div class="blog-post-img mb-1">
                <a href="#"><img src="@Model.Guide.Image" alt="" style="width:70px; height:70px" class="rounded-circle img-fluid" /></a>
            </div>
            <div class="blog-post-info">
                <div class="author align-items-center mb-1">
                    @Model.City Tur Rehberimiz
                    <div><a href="#">@Model.Guide.GuideName</a></div>
                </div>
            </div>
        </div>
    </div>
    <section class="blog-post-main w3l-homeblock1">
        <!--/blog-post-->
        <div class="blog-content-inf pb-5">
            <div class="container pb-lg-4">
                <div class="single-post-image">
                    <div class="post-content">
                        <img src="@Model.CoverImage" class="radius-image img-fluid imgX mb-5" alt="" />
                    </div>
                </div>
                <div class="single-post-content">
                    <p class="alphabet mb-4">
                        <span>@Model.Details1</span>
                    </p>
                    <blockquote class="blockquote my-5">
                        <div class="icon-quote"><span class="fa fa-quote-left" aria-hidden="true"></span></div>
                        <p class="alphabet mb-4">
                            <span>asd</span>
                        </p>
                        <footer class="blockquote-footer mt-3">
                            
                        </footer>
                    </blockquote>
                    <div class="sing-post-thumb mb-5 row pt-3">
                        <div class="col-sm-6 post-content">
                            <a href="#url"><img src="@Model.Image"  class="img-fluid imgX radius-image" alt=""></a>
                        </div>
                        <div class="col-sm-6 mt-sm-0 mt-3 post-content">
                            <a href="#url"><img src="@Model.Image2"  class="img-fluid imgX radius-image" alt=""></a>
                        </div>
                    </div>
                    <p class="alphabet mb-4">
                        <span>@Model.Details2</span>
                    </p>

                    <div class="d-grid left-right mt-5 pb-md-5">
                        <div class="buttons-singles tags">
                            <h4>Etiketler:</h4>
                            <a>Seyehat</a>
                            <a>Tatil</a>
                            <a>Konaklama</a>
                            <a>Tur</a>

                        </div>
                        <div class="buttons-singles">
                            <h4>Paylaş :</h4>
                            <a href="#blog-share"><span class="fa fa-facebook" aria-hidden="true"></span></a>
                            <a href="#blog-share"><span class="fa fa-instagram" aria-hidden="true"></span></a>
                            <a href="#blog-share"><span class="fa fa-twitter" aria-hidden="true"></span></a>
                            <a href="#blog-share"><span class="fa fa-whatsapp" aria-hidden="true"></span></a>
                            <a href="#blog-share"><span class="fa fa-pinterest" aria-hidden="true"></span></a>
                            <a href="#blog-share"><span class="fa fa-telegram" aria-hidden="true"></span></a>
                        </div>
                    </div>
                    <!--//author-card-->
                    <div class="author-card mt-5">
                        <div class="row align-items-center">
                            <div class="col-sm-3 col-6">
                                <div>
                                    <img src="@Model.Guide.Image" style="width:155px; height:155px" alt="" class="rounded-circle img-fluid">
                                </div>
                            </div>
                            <div class="col-sm-9 mt-sm-0 mt-3">
                                <h3 class="mb-3 title">@Model.Guide.GuideName</h3>
                                <p>
                                    @Model.Guide.Description
                                </p>
                                <ul class="author-icons mt-4">
                                    <li>
                                        <a class="facebook" href="@Model.Guide.FacebookURL" target="_blank">
                                            <span class="fa fa-facebook"
                                                  aria-hidden="true"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="instagram" href="@Model.Guide.InstagramURL" target="_blank">
                                            <span class="fa fa-instagram"
                                                  aria-hidden="true"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="linkedin" href="#url">
                                            <span class="fa fa-linkedin"
                                                  aria-hidden="true"></span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!--//author-card-->
                    @await Component.InvokeAsync("_CommentList", new { id = ViewBag.i })

                    @await Html.PartialAsync("~/Views/Comment/AddComment.cshtml", new { id = ViewBag.destID })

                </div>
            </div>
        </div>
        <!--//blog-post-->
    </section>

    <!--/w3l-footer-29-main-->
    <style>
        .post-content {
            display: flex; /* Flexbox'ı etkinleştirir */
            justify-content: center; /* İçeriği yatayda ortalar */
            align-items: center; /* İçeriği dikeyde ortalar (gerekirse) */
            height: 100%; /* Gereksinimlerinize göre ayarlayın */
            text-align: center; /* İçerik metinlerini ortalar */
        }

        imgX {
            max-width: 100%; /* Görselin genişliğini kapsayıcının genişliği ile sınırlandırır */
            max-height: 400px; /* Görselin yüksekliğini sabit bir değere sınırlar */
            width: auto; /* Genişlik, yükseklikteki orana göre ayarlanır */
            height: auto; /* Yükseklik, genişlikteki orana göre ayarlanır */
            object-fit: cover; /* Görseli kapsayıcıya uygun şekilde kırpar ve doldurur */
        }
    </style>
</body>

