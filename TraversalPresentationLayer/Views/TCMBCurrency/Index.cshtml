@model List<TraversalPresentationLayer.Models.TCMBCurrencyModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Döviz Kurları</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index">Ana Sayfa</a></li>
                <li><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span>Döviz Kurları</li>
            </ul>
        </div>
    </div>
</section>
<div class="py-2 w3l-homeblock1 text-center">
    <div class="container mt-md-3">
        <h5 class="blog-desc-big text-center mb-4">
            <a href="https://www.tcmb.gov.tr/kurlar/today.xml" target="_blank">Veriler TCMB sitesinden alınmakta ve düzenli olarak güncellenmektedir.🔗</a>
        </h5>
    </div>
<table class="custom-table">
    <thead>
        <tr>
            <th>Para Birimi</th>
            <th>Satış</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="currency-name">1 @item.DovizCinsi</td>
                <td>@item.SatisKuru TL </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px auto;
        font-size: 18px;
        text-align: left;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
    }

        .custom-table thead tr {
            background-color: #FF1654;
            color: #ffffff;
            text-align: left;
            font-weight: bold;
        }

        .custom-table th,
        .custom-table td {
            padding: 12px 15px;
            border: 1px solid #dddddd;
        }

        .custom-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }

            .custom-table tbody tr:nth-of-type(even) {
                background-color: #f3f3f3;
            }

            .custom-table tbody tr:last-of-type {
                border-bottom: 2px solid #FF1654;
            }

            .custom-table tbody tr:hover {
                background-color: #f5f5f5;
                cursor: pointer;
            }

        .custom-table .currency-name {
            max-width: 100px; /* İsim kolonunun maksimum genişliği */
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .custom-table tbody tr td {
            position: relative;
        }

            .custom-table tbody tr td::before {
                content: '';
                position: absolute;
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
                background-color: rgba(0, 0, 0, 0.05);
                transition: background-color 0.3s ease;
            }

        .custom-table tbody tr:hover td::before {
            background-color: rgba(0, 0, 0, 0.1);
        }
</style>


