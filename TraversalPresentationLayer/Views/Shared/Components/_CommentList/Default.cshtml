@using EntityLayer.Concrete
@model List<Comment>
<div class="comments mt-5">
    <h4 class="side-title ">Yorumlar</h4>
    @foreach(var item in Model)
    {
        <div class="media mt-4">
            @if (item.AppUser.ImageURL != null)
            {
                <div class="img-circle">
                    <img src="/UserImages/@item.AppUser.ImageURL" class="img-fluid" alt="...">
                </div>
            }
            <div class="media-body">

                <ul class="time-rply mb-2">
                    <li>
                        <a href="#" class="name mt-0 mb-2 d-block">@item.AppUser.Name @item.AppUser.Surname</a>
                        @item.CommentDate.ToShortDateString()

                    </li>
                </ul>
                <p>
                   @item.CommentContent
                </p>
            </div>
        </div>
    }
</div>
