@model AnnouncementEditDTO
@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Düzenleme</h1>
<form method="post">
    <input type="hidden" asp-for="AnnouncementID" />
    <div class="form-group">
        @Html.Label("Duyuru Başlığı: ")
        <input type="text" asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Duyuru İçeriği: ")
        <textarea cols="30" rows="5" class="form-control" asp-for="Content" required></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>

    </div>
    <button class="btn btn-sm btn-outline-dark" onclick="alert('Yeni duyuru kaydı başarıyla oluşturuldu!');">Yeni duyuru Oluştur</button>
</form>

