@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h4 class="card-header">Rehber Listesi</h4>
    <table class="table table-hover">
        <thead class="">
            <tr>
                <th></th>
                <th>Görsel</th>
                <th>Ad Soyad</th>
                <th>Açıklama</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
                <tr>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.GuideID</strong></td>
                    <td>
                        <img src="@item.Image"
                             class="d-block rounded"
                             height="50"
                             width="50" />
                    </td>
                    <td>@item.GuideName</td>
                    <td>@item.Description</td>
                    @{
                        if (@item.Status == true)
                        {
                            <td><span class="badge bg-label-primary me-1">Aktif</span></td>
                        }
                        else
                        {
                            <td><span class="badge bg-label-primary me-1">Pasif</span></td>
                        }
                    }
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                @{
                                    if (item.Status == true)
                                    {
                                        <a class="dropdown-item" href="/Admin/Guide/ChangeToFalse/@item.GuideID"><i class="bx bxs-bullseye me-1 "></i>Pasif Hale Getir</a>
                                    }
                                    else
                                    {
                                        <a class="dropdown-item" href="/Admin/Guide/ChangeToTrue/@item.GuideID"><i class="bx bxs-bullseye me-1 "></i>Aktif Hale Getir</a>
                                    }
                                }
                                <a class="dropdown-item" href="/Admin/Guide/DeleteGuide/@item.GuideID"><i class="bx bx-trash me-1"></i>Sil</a>
                                <a class="dropdown-item" href="/Admin/Guide/EditGuide/@item.GuideID"><i class="bx bx-edit-alt me-1"></i>Düzenle</a>

                            </div>
                        </div>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni Rehber Oluştur</a>


