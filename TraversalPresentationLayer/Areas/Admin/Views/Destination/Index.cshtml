@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h4 class="card-header">Tur Rotaları</h4>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead class="">
                <tr>
                    <th></th>
                    <th>Şehir</th>
                    <th>Fiyat</th>
                    <th>Kapasite</th>
                    <th>Detaylar</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach(var item in Model)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.DestinationID</strong></td>
                        <td>@item.City</td>
                        <td>@item.Price $</td>
                        <td><span class="badge bg-label-primary me-1">@item.Capacity</span></td>
                        <td><a href ="" class="btn btn-outline-info">Detaylar</a></td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Destination/DestinationDetails/@item.DestinationID"><i class="bx bx-edit-alt me-1"></i>Sitede Gör</a>
                                    <a class="dropdown-item" href="/Admin/Destination/DeleteDestination/@item.DestinationID"><i class="bx bx-trash me-1"></i>Sil</a>
                                    <a class="dropdown-item" href="/Admin/Destination/UpdateDestination/@item.DestinationID"><i class="bx bxs-bullseye me-1"></i>Düzenle</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<a href="/Admin/Destination/AddDestination" class="btn btn-outline-primary">Yeni Tur Rotası Oluştur</a>

