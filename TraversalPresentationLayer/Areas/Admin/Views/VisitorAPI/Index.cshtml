@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h4 class="card-header">API Ziyaretçi Listesi</h4>
    <table class="table table-hover">
        <thead class="">
            <tr>
                <th></th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Şehir</th>
                <th>Ülke</th>
                <th>E-posta</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.City</td>
                    <td>@item.Country</td>
                    <td>@item.Email</td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/Admin/VisitorAPI/EditVisitor/@item.VisitorID"><i class="bx bx-edit-alt me-1"></i>Düzenle</a>
                                <a class="dropdown-item" href="/Admin/VisitorAPI/DeleteVisitor/@item.VisitorID"><i class="bx bx-trash me-1"></i>Sil</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</br>
<a href="/Admin/VisitorAPI/AddVisitor" class="btn btn-outline-dark">Yeni Ziyaretçi Ekle (API)</a>

