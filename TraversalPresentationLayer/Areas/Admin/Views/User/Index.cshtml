@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h4 class="card-header">Misafirler</h4>
    <table class="table table-hover">
        <thead class="">
            <tr>
                <th>Misafir ID</th>
                <th>Misafir Ad Soyad</th>
                <th>Kullanıcı Adı</th>
                <th>E-Posta Adresi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
                <tr>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Id</strong></td>
                    <td>@item.Name @item.Surname</td>
                    <td>@item.UserName</td>
                    <td><span class="badge bg-label-primary me-1">@item.Email</span></td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/Admin/User/DeleteUser/@item.Id"><i class="bx bx-trash me-1"></i>Kullanıcıyı Sil</a>
                                <a class="dropdown-item" href="/Admin/User/EditUser/@item.Id"><i class="bx bx-edit-alt me-1"></i>Kullanıcıyı Düzenle</a>
                                <a class="dropdown-item" href="/Admin/User/CommentUser/@item.Id"><i class="bx bx-comment me-1"></i>Kullanıcının Yaptığı Yorumlar</a>
                                <a class="dropdown-item" href="/Admin/User/ReservationUser/@item.Id"><i class="bx bx-edit-alt me-1"></i>Kullanıcının Onaylanan Rezervasyonlar</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<a href="/Login/SignUp/" class="btn btn-outline-primary">Yeni Kullanıcı Oluştur</a>

