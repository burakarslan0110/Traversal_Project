@model TraversalPresentationLayer.CQRS.Results.DestinationResults.GetDestinationByIDQueryResult
@{
    ViewData["Title"] = "GetDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>CQRS Lokasyon Düzenleme</h1>

<form method="post">
    <input type="hidden" asp-for="DestinationID"/>
    <label>Şehir: </label>
    <input type="text" asp-for="City" class="form-control"/>
    <br />
    <label>Gün/Gece: </label>
    <input type="text" asp-for="DayNight" class="form-control" />
    <br />
    <label>Kapasite: </label>
    <input type="text" asp-for="Capacity" class="form-control" />
    <br />
    <label>Fiyat: </label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <button class="btn btn-outline-success">CQRS üzerinden Lokasyon Bilgileri Güncelle</button>
</form>

