@model List<EntityLayer.Concrete.Feature1>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h4 class="card-header">Öne Çıkan Görseller</h4>
    <table class="table table-hover">
        <thead class="">
            <tr>
                <th></th>
                <th>Görsel</th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Düzenle</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                    <td>
                        <img src="@item.Image"
                             class="d-block rounded"
                             height="50"
                             width="50" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td><a href="/Admin/FeatureImages/EditImage/@item.Feature1ID" class="btn btn-outline-dark">Düzenle</a></td>

                </tr>
            }
        </tbody>
    </table>
</div>

